// GENERATED FILE - DO NOT EDIT!

package main

import (
	"flag"
	"fmt"
	"net"
	"os"

	"github.com/sirupsen/logrus"
	"google.golang.org/grpc"

	pb "{{ .Service.Definition }}"
	service "{{ .Service.Implementation }}"
)

var portFlag int
var logLevelFlag string

var logger *logrus.Logger

func init() {
	flag.IntVar(&portFlag, "port", 50051, "The server port.")
	flag.StringVar(&logLevelFlag, "log-level", "info", "The log level (panic, fatal, error, warn, info, debug, trace).")
	flag.Parse()

	setupLogging()
}

func main() {
	listener, err := net.Listen("tcp", fmt.Sprintf("0.0.0.0:%d", portFlag))
	if err != nil {
		logger.Fatal(err)
	}
	defer listener.Close()

	grpcServer := grpc.NewServer()

{{- range $fn := .Service.RegisterFunctions }}
	pb.{{$fn}}(grpcServer, service.New(logger))
{{- end}}

	logger.Printf("server listening at %v", listener.Addr())
	if err := grpcServer.Serve(listener); err != nil {
		logger.Fatal(err)
	}

	// TODO(f0rmiga): handle graceful shutdowns.
}

func setupLogging() {
	logger = logrus.New()
	logger.Formatter = &logrus.JSONFormatter{}
	logger.Out = os.Stderr
	level, err := logrus.ParseLevel(logLevelFlag)
	if err != nil {
		fmt.Printf("ERROR: %v\n", err)
		os.Exit(1)
	}
	logger.Level = level
}
